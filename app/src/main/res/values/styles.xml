<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppTitle" parent="TextView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/space_large</item>
        <item name="android:layout_marginBottom">@dimen/space_medium</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="UserDataViews" parent="TextView">
        <item name="android:layout_marginStart">@dimen/space_small</item>
        <item name="android:layout_marginTop">@dimen/space_extra_small</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/color_user_data_text</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="DividerStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_300</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginStart">@dimen/space_large_plus</item>
        <item name="android:layout_marginEnd">@dimen/space_large_plus</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLength">512</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textColorHint">@color/color_text_disabled</item>
    </style>

    <style name="ButtonAdd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/space_small</item>
        <item name="android:background">@drawable/bg_btn_add</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="ImageViewAvatar">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">92dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_user_avatar_default</item>
    </style>
</resources>